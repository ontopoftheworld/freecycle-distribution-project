<% include partials/header %>

    <a href="/offers" class="btn btn-primary" id="backButton">Back</a>
    <div class="container">
        <h1>Create a New Offer</h1>
	<div class="newPostForm">
        <form action="/offers" method="POST">
            <input type="text" name="offer[title]" placeholder="Enter Title" required><br><br>
            <input type="text" name="offer[desc]" placeholder="Enter Description" required><br><br>
            <input type="text" name="offer[location]" placeholder="Location: City, State" required><br><br>
            <input type="number" name="offer[hoursOffered]" placeholder="Enter Hours Requested" required><br><br>
            <p>Category:</p>
            <select name="offer[category]">
                <option value="Child Care">Child Care</option>
                <option value="Arts and Crafts">Arts and Crafts</option>
                <option value="Education">Education</option>
                <option value="Garden and Yardwork">Garden and Yardwork</option>
                <option value="Home Repair">Home Repair</option>
                <option value="Housework">Housework</option>
                <option value="Moving/Relocating">Moving/Relocating</option>
                <option value="Pet Care">Pet Care</option>
                <option value="Translation">Translation</option>
                <option value="Transportation">Transportation</option>
                <option value="Other">Other</option>
            </select>
            <br><br>
            <button>Submit</button>
        </form>
	</div>
    </div>

    <script>
        $( "#offers" ).addClass( "selected" );
    </script>

<% include partials/footer %>