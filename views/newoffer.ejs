<% include partials/header %>

    <a href="/offers" class="btn btn-primary" id="backButton">Back</a>
    <div class="container">
        <h1>Create a New Offer</h1>
	<div class="newPostForm">
        <form action="/offers" method="POST">
            <input type="text" name="offer[title]" placeholder="Enter title here." required><br><br>
            <input type="text" name="offer[desc]" placeholder="Enter description" required><br><br>
            <input type="text" name="offer[location]" placeholder="Location: City, State" required><br><br>
            <p>Offer type:</p>
            <input type="radio" name="offer[type]" value="Ongoing" checked> Ongoing<br>
            <input type="radio" name="offer[type]" value="One-time">One-time<br>
            <input type="number" name="offer[hoursOffered]" placeholder="Enter hours offered" required><br><br>
            <p>category:</p>
            <select name="offer[category]">
                <option value="categoryA">categoryA</option>
                <option value="categoryB">categoryB</option>
                <option value="categoryC">categoryC</option>
                <option value="categoryD">categoryD</option>
                <option value="categoryE">categoryE</option>
            </select>
            <br><br>
            <button>Submit</button>
        </form>
	</div>
    </div>

    <script>
        $( "#offers" ).addClass( "selected" );
    </script>

<% include partials/footer %>