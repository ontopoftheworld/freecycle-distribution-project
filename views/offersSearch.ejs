<% include partials/header %>
    <div class="container">
        <h1>Offers <%= type %> result for:  <%= searchContent %>  <%= sortCategory %></h1>
        
        <div class="searchOffers">
            <form action="/search/offers" id="searchForm" method="GET">
                <input name="userId" type="hidden" value="<%= currentUser._id %>" >
                <input type="text" placeholder="Find Items" name="searchContent" value="" required>
                <button class="btn btn-primary" type="submit">Search </button>
            </form>
        </div>
        
        <form action="/sortonsearch/offers" method="GET">
            <input name="searchContent" type="hidden" value="<%= searchContent %>">
            <input name="userId" type="hidden" value="<%= currentUser._id %>" >
            <h5>filter:</h5>
            <select name="sortCategory">
                <option value="">Choose Category</option>
                <option value="categoryA">categoryA</option>
                <option value="categoryB">categoryB</option>
                <option value="categoryC">categoryC</option>
                <option value="categoryD">categoryD</option>
                <option value="categoryE">categoryE</option>
            </select>
            <button class="btn btn-primary">Apply</button>
        </form>

        <a class="btn btn-primary" href="/offers/new">Make New Offer</a>
        <div id="offer">
                <% if (offers=="") { %>
                    <h2>No result!</h2>
                <% } %>
            <% offers.forEach(function(offer){ %>
	              <div class="indivPost">
                    <span>
                        <h4><%= offer.title %></h4>
                        <p><%= offer.desc %></p>
                        <h6>Hours offered: <%= offer.hoursOffered %></h6>
                        <h6>Category: <%= offer.category %></h6>
                        <h6>Date posted: <%= offer.postDate.toDateString() %></h6>
                        <p>Submitted by: <a href="/users/<%= offer.author.id %>"><%= offer.author.username %></a></p>
                    </span>
                    <p>
                        <a href="/offers/<%= offer._id %>" class="btn btn-primary">More Info</a>
                        <a href="/offers/<%= offer._id %>/response" class="btn btn-primary">Take on</a>
                    </p>
	              </div>
            <% }); %>
        </div>
        <% if (offers!="") { %>
            <div class="pagination">
                <%  for (i = 1; i <= pages; i++) { %>
                    <a href="/sortonsearch/offers?searchContent=<%= searchContent %>&sortCategory=<%= sortCategory %>&userId=<%= currentUser._id %>&pageChoose=<%= i %>"><%= i %></a>
                <%  } %>
            </div>
        <% } %>
    </div>

    <script>
        $( "#offers" ).addClass( "selected" );
    </script>

<% include partials/footer %>
