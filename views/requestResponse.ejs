<% include partials/header %>

<div class="container" >
        <h1>Respond to <%= request.author.username %>'s Request</h1>
        <h3>Request details:</h3>
        <h5>Title: <%= request.title %></h5>
        <h5>Description: <%= request.desc %></h5>
        <h5>Hours offered: <%= request.hoursOffered %></h5>
        <h5>Date needed by: <%= request.postDate %></h5>
        <form action="/requests/<%= request._id %>/response" method="POST" >
            <h3>Respond to <%= request.author.username %>'s request:</h3>
            <textarea name="message" rows="5"  style="width:100%;border-top-width:3px;border-top-color:grey;border-left-width:3px;border-left-color:grey;"></textarea>
            <button class="btn btn-primary">Send Response</button> 
        </form>
		<a href="/requests ">Go Back</a>
</div>

<script>
    $( "#requests" ).addClass( "selected" );
</script>

<% include partials/footer %>
