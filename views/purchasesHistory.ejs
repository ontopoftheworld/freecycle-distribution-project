<% include partials/header %>

    <div class="container">
        <h1>My Purchase History</h1>
        <div class="container">
            <div id="itemnotpickup">
            <h4>Item not picked up yet:</h4>
			<div style="width:100%;
    max-height: 700px;
    overflow-y: scroll;">
            <% items.forEach(function(item){ %>
            <% if(item.isPickedUp==false){ %>
		          <div class="indivPost" style="column-count:3;max-height:200px;">
                    <img  src="https://s3.amazonaws.com/freecycle-distribution-project-storeimg/<%= item.imgname %>" width="150px" height="150px">
					<span>
                        <h4><%= item.title %></h4>
                        <p><%= item.desc %></p>
                        <h6>Hour Price: <%= item.hourPrice %></h6>
                        <h6>Category: <%= item.category %></h6>
                        <h6>Item Condition: <%= item.condition %></h6>
                        <h6>Date posted: <%= item.postDate.toDateString() %></h6>
                        <h6>Pickup Location: <%= item.location %></h6>
						<br><br>
                    </span>
		          </div>
            <% } %>
        <% }); %>
		</div>
            </div>

            <div id="itempickup">
            <h4>Item already picked up:</h4>
			<div style="width:100%;
    max-height: 700px;
    overflow-y: scroll;">
            <% items.forEach(function(item){ %>
            <% if(item.isPickedUp==true){ %>
                  <div class="indivPost" style="column-count:3;max-height:200px;">
                    <img  src="https://s3.amazonaws.com/freecycle-distribution-project-storeimg/<%= item.imgname %>" width="150px" height="150px">
                    <span>
                        <h4><%= item.title %></h4>
                        <p><%= item.desc %></p>
                        <h6>Hour Price: <%= item.hourPrice %></h6>
                        <h6>Category: <%= item.category %></h6>
                        <h6>Item Condition: <%= item.condition %></h6>
                        <h6>Date posted: <%= item.postDate.toDateString() %></h6>
                        <h6>Pickup Location: <%= item.location %></h6>
                        <br><br>
                    </span>
                  </div>
            <% } %>
        <% }); %>
		</div>
            </div>



    </div>
</div>

    <script>
        $( "#store" ).addClass( "selected" );
    </script>

<% include partials/footer %>