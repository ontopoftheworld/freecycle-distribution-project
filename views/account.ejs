<% include partials/header %>

    <div class="container">
        <h1>Your Account</h1>
		<div>
		<div id="editinfo">
		<a href="/account/<%= user._id %>/edit">Edit your profile</a>
		</div>
		<div>
		<img  src="/static/images/noProfilePic" width="150px" height="150px">
		</div>
