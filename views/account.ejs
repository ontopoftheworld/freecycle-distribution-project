<% include partials/header %>

    <div class="container">
        <h1>Your Account</h1>
		<div id="accountGeneral">
		<div id="topSeg">
		<div class="topSegPart">
		<img src="/static/images/noProfilePic.png" id="profileImg">
		</div>
		<div id="userinfo" class="topSegPart">
		     <h4><%= user.firstName %> <%= user.lastName %></h6>
			<h6>Your Hours: <%= user.userHours %></h6>
			<h6>Username: <%= user.username %></h6>
			<h6>Email: <%= user.email %></h6>
			<h6>Hometown: <%= user.hometown %></h6>
			<h6>Zipcode: <%= user.zipcode %></h6>
			<h6>About me: </h6>
			<div id="userbio1">
			<%= user.userbio %>
			</div>
		</div>
		<div id="editinfo" class="topSegPart">
		<a href="/account/<%= user._id %>/edit" id="editProfileLink">Edit your profile</a>
		</div>
		</div>
        
		
		<br><br>
		<div class="listingBoxH" id="statement" >

<h5>Statement History:</h5>
<table id="userHistoryTable">
       <tr>
	<th>Date</th>
	<th>Action</th>
	<th>Change</th>
	<th>Updated Hours</th>
       </tr>
        <% userHrsHistory.forEach(function(entry){ %>
	   <tr>
	    <td><%= entry.date %></td>
	    <td id="entryAction"><%= entry.action %></td>
	    <td id="entryChange"><%= entry.change %></td>
	    <td id="entryNewHours"><%= entry.newHours %></td>
	   </tr>
	<% }); %>
</table>
</div>
</div>
<br>
        <a href="/home%>" id="linkHome">Go Home</a>
    </div>

<% include partials/footer %>