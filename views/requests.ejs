<% include partials/header %>
<style>
.ScrollStyleYou{
    width:100%;
    max-height: 400px;
    overflow-y: scroll;
}
.ScrollStyleOthers{
    width:100%;
    max-height: 700px;
    overflow-y: scroll;
}
</style>
    <div class="container">
        <h1>Requests</h1><a class="btn btn-success"  style="background-color:#001B88" href="/requests/new">Make New Request</a>
        <a href="/requestsResponse" class="btn btn-primary" style="background-color:rgb(18, 116, 37);">See Your Responses to Requests</a>
		
        <h3>Requests Posted By You:</h3>
        <div class="ScrollStyleYou">
        <div id="request">
            <% var i = 0; %>
            <% requests.forEach(function(request){ %>
                <% if((currentUser && request.author.id.equals(currentUser._id))) { %>
		            <div class="indivPost" style="margin: 0 0 0px 0px;">
                        <p>
                            <span>
                                <a href="/requests/<%= request._id %>" class="btn btn-primary"><%= request.title %></a>
                                <a href="/requests/<%= request._id %>" class="btn btn-primary">More Info</a>
                                <a href="/requests/<%= request._id %>/response" class="btn btn-primary">See Responses (<%= request.requestResponse.length %>)</a>
                            </span>
                        </p>
                    </div>
                    <% i++; %>
                <% } %>
            <% }); %>
            <% if (i == 0) { %>
                <p>You do not currently have any active request postings</p>
            <% } %>
        </div>
        </div>

        <h3>Browse Requests Posted By Others:</h3>
		<div class="filterform">
		<div class="searchStore">
		
            <form action="/search/requests" id="searchForm" method="GET">
			<div class="stitle">
                <h5 id="searchbartext" style="font-weight:500;text-shadow: 0px 0px;color:white;">Search:</h5>
			</div>
                <input name="userId" type="hidden" value="<%= currentUser._id %>" >
                <input class="sinput" type="text" placeholder="Find Requests" name="searchContent" value="" required>
                <button id="sbutton" class="btn btn-dark" type="submit">Go </button>
            </form>
        </div>
        <form action="/sort/requests" method="GET">
            <input name="userId" type="hidden" value="<%= currentUser._id %>" >
			<div class="otitle">
                <h5 id="selecttext" style="font-weight:500;text-shadow: 0px 0px;">Sort by category:</h5>
			</div>
			<div class="oselect">
			<select name="sortCategory" style="border:none">
                <option value="">Choose Category</option>
                <option value="categoryA">categoryA</option>
                <option value="categoryB">categoryB</option>
                <option value="categoryC">categoryC</option>
                <option value="categoryD">categoryD</option>
                <option value="categoryE">categoryE</option>
            </select>
			</div>
			<div class="obutton">
            <button id="obu" class="btn btn-dark">Apply</button>
			</div>
			<br><br>
        </form></div>
        <div class="ScrollStyleOthers">
            <div id="request">
                <% requests.forEach(function(request){ %>
                    <% if(!(currentUser && request.author.id.equals(currentUser._id))) { %>
		    <div class="indivPost">
                    <span>
                        <h4><%= request.title %></h4>
                        <p><%= request.desc %></p>
                        <h6>Hours offered: <%= request.hoursOffered %></h6>
                        <h6>Category: <%= request.category %></h6>
                        <h6>Date posted: <%= request.postDate.toDateString() %></h6>
                        <p>Submitted by: <a href="/users/<%= request.author.id %>"><%= request.author.username %></a></p>
                    </span>
                    <p>
                        <a href="/requests/<%= request._id %>" class="btn btn-primary">More Info</a>
                        <a href="/requests/<%= request._id %>/response" class="btn btn-primary">Take on</a>
                        
                    </p>
            </div>
            <% } %>
            <% }); %>
        </div>
        </div>
    </div>

    <script>
        $( "#requests" ).addClass( "selected" );
    </script>

<% include partials/footer %>
