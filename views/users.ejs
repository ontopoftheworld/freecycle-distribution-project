<% include partials/header %>

    <div class="container">

        <h1>Members</h1>
        <div class="searchUser">
            <form action="/search/users" id="searchForm" method="GET">
                <input type="text" placeholder="Find Users" name="searchContent" value="" required>
                <button class="btn btn-primary" type="submit">Search </button>
            </form>
        </div>
            <div style="">
                <% users.forEach(function(user){ %>
		            <div class="indivPost">	
                    <span>
                        <h4><%= user.firstName %></h4>
                        <h4><%= user.username %></h4>
                    </span>
                    <p>
                        <a href="/users/<%= user._id %>" class="btn btn-primary">More Info</a>
                        <a href="/users/<%= user._id %>" class="btn btn-primary">Message</a>
                    </p>
		            </div>	
                <% }); %>
            </div>
    </div>

    <script>
        $( "#members" ).addClass( "selected" );
    </script>

<% include partials/footer %>