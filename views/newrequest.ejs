<% include partials/header %>

    <a href="/requests" class="btn btn-primary" id="backButton">Back</a>
    <div class="container">
        <h1>Post a New Request</h1>
	<div class="newPostForm">
        <form action="/requests" method="POST">
            <input type="text" name="request[title]" placeholder="Enter title here." required><br><br>
            <input type="text" name="request[desc]" placeholder="Enter description" required><br><br>
            <input type="number" name="request[hoursOffered]" placeholder="Enter hours offered" required><br><br>
            <input type="text" name="offer[location]" placeholder="Location: City, State" required><br><br>
            <p>category:</p>
            <select name="request[category]">
                <option value="Child Care">Child Care</option>
                <option value="Arts and Crafts">Arts and Crafts</option>
                <option value="Education">Education</option>
                <option value="Garden and Yardwork">Garden and Yardwork</option>
                <option value="Home Repair">Home Repair</option>
                <option value="Housework">Housework</option>
                <option value="Moving/Relocating">Moving/Relocating</option>
                <option value="Pet Care">Pet Care</option>
                <option value="Translation">Translation</option>
                <option value="Transportation">Transportation</option>
                <option value="Other">Other</option>
            </select>
            <br><br>
            <button>Submit</button>
        </form>
	</div>
    </div>

    <script>
        $( "#requests" ).addClass( "selected" );
    </script>

<% include partials/footer %>