<% include partials/header %>

    <div class="container">
    	 <h1>Edit Request</h1>

        <div class="newPostForm">
        <form action="/requests/<%= request._id %>?_method=PUT" method="POST">
            <input type="text" name="request[title]" value="<%= request.title %>">
            <input type="text" name="request[desc]" value="<%= request.desc %>">
            <input type="number" name="request[hoursOffered]" value="<%= request.hoursOffered %>">
            <input type="number" name="request[location]" value="<%= request.location %>">
            <p>category:</p>
            <select name="request[category]" value="<%= request.category %>">
                <option value="categoryA">categoryA</option>
                <option value="categoryB">categoryB</option>
                <option value="categoryC">categoryC</option>
                <option value="categoryD">categoryD</option>
                <option value="categoryE">categoryE</option>
            </select>
            <br><br>
            <button>Submit</button>
        </form>
        </div>

    	<a href="/requests/<%= request._id %>" class="btn btn-primary">Go Back</a>
    </div>

    <script>
        $( "#requests" ).addClass( "selected" );
    </script>

<% include partials/footer %>